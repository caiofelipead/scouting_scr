# Database Configuration
POSTGRES_USER=scoutpro
POSTGRES_PASSWORD=scoutpro_secret_change_in_production
POSTGRES_DB=scout_pro
DATABASE_URL=postgresql://scoutpro:scoutpro_secret_change_in_production@db:5432/scout_pro

# Redis Configuration
REDIS_PASSWORD=redis_secret_change_in_production
REDIS_URL=redis://:redis_secret_change_in_production@redis:6379/0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://localhost,https://your-domain.com

# External APIs
TRANSFERMARKT_API_KEY=your_transfermarkt_api_key_here
GOOGLE_SHEETS_CREDENTIALS=/path/to/credentials.json

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@scoutpro.com

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=scout-pro-photos
AWS_REGION=us-east-1

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
